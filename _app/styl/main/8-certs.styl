#certs
	padding 0 0 80px
.carousel
	width 100%
	max-width 720px
	margin 0 auto
.carousel-inner > .item > a > img, .carousel-inner > .item > img, .img-responsive
	width 100%
	display block
	margin 0 auto
	object-fit: cover
	object-position: center
	height: 574px
.carousel-inner
	width 90%
	margin 0 auto
.carousel-indicators
	position: static
	margin 0 auto
	li
		background-color: #c7c7c7
		border 0
		transition: all .3s ease
		margin 0
		&.active
		&:hover
			border 0
			background-color: #222
			width 10px
			height: 10px
.carousel-control
	width 40px
	height: 40px
	top  calc(50% - 40px)
	background-color: #F8C4FF
	border-radius: 50%
	color #222
	text-shadow: none
	line-height: 42px
	opacity 1
	font-family: PH
	font-size: 22px
	transition: all .3s ease
	&:focus
		opacity 1
		color #222
		background-color: #F8C4FF
	&:hover
		opacity 1
		color #222
		background-color: #AF66BD
	&.left
	&.right
		background-image: none
	&.left
		left -10px
	&.right
		right -10px
#photos-slider
	margin 80px auto 50px
.form
	width 100%
	max-width 430px
	margin 0 auto
.form-title
	font-family: PH
	font-size: 26px
	margin-bottom: 10px
	text-align center
.input
	display block
	width 100%
	border: 2px solid #A8A8A8;
	padding 16px 25px
	font-size: 18px
	font-weight: 300
	color: #222;
	background-color transparent
	box-sizing: border-box
	border-radius: 30px
	margin-bottom: 20px
::-webkit-input-placeholder
::-moz-placeholder
:-moz-placeholder
:-ms-input-placeholder
	color:#D0D0D0;
	opacity:1
@-webkit-keyframes autofill
	to
		font-size: 18px
		color: #222;
		background-color: transparent
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.button-form
	display block
	max-width none
	width 100%
.checking
	display: table
	width 100%
	max-width 515px
	margin: 5px auto 0
	text-align: left
.checking-main
	margin-left: 0
.checking .check-label
	line-height: 28px
	cursor: pointer
	position: relative
	display: table-cell
	vertical-align: middle
	padding: 0 0 0 30px
	text-align: left
	font-size: 12px
	font-weight: 200
	color #5c5b5b
.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed
	display: inline
	color #5c5b5b
	&:focus
		border-bottom: 1px dashed
		color #5c5b5b
	&:hover
		border-bottom: none
		text-decoration: none
		color #5c5b5b
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .22)
	100%
		box-shadow: 0 0 7px 5px rgba(red, .22)
.checking .check-label:before
	content: ''
	background-color: red
	position: absolute
	left: 0
	top: 3px
	width: 20px
	height: 20px
	border none
	border: 1px solid #B9B7FA
	border-radius: 0
	animation: pulse
	animation-duration: .7s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
.checking .check-label:after
	content: ''
	position: absolute
	left: 7px
	top: -10px
	width: 8px
	height: 15px
	background-color: transparent
	opacity: 0
	border-bottom: 2px solid #000
	border-right: 2px solid #000
	transform: rotate(41deg)
	transition: all 0.5s ease
.check
	position: absolute
	z-index: -1
	opacity: 0
	width: 0
	height 0
	border: 0
	left -99999px
.check:checked + .check-label:before
	background-color: transparent
	animation: none
.check:checked + .check-label:after
	opacity: 1
	top: 4px
	transition: all 0.5s ease