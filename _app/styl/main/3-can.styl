#can
	padding 80px 0
.can-item
	width 100%
	max-width 560px
	margin 0 auto 50px
	padding-left: 140px
	background-repeat no-repeat
	background-position: top 10px left
	background-size: 120px
	min-height 180px
	&-1
		background-image: url(../img/icons/can-1.png)
	&-2
		background-image: url(../img/icons/can-2.png)
	&-3
		background-image: url(../img/icons/can-3.png)
	&-4
		background-image: url(../img/icons/can-4.png)
	&-5
		background-image: url(../img/icons/can-5.png)
	&-6
		background-image: url(../img/icons/can-6.png)
	&-title
		font-family: PH
		font-size: 22px
		margin-bottom: 8px
		text-transform uppercase
.can-acc-item
	width 100%
	max-width 900px
	&-button
		border-top: 2px solid #bfbfbf
		border-bottom: 1px solid #bfbfbf
		padding 7px 10px 7px 35px
		position relative
		font-size: 20px
		font-weight: bold
		cursor pointer
		margin-bottom: 2px
		&:before
			content: '+'
			display block
			position absolute
			width 43px
			height: 43px
			border-radius: 50%
			background-color: #db00a1
			font-size: 18px
			font-weight: bold
			line-height: 43px
			color #fff
			top 1px
			left -22px
			text-align center
	&-info
		display none
		padding 20px 0 40px
		&-title
			font-size: 20px
			font-weight: bold
			margin 0 0 20px
			&-mt
				margin-top: 40px
.button-can
	margin-top: 30px