#get
	padding 80px 0 50px
.get-item
	width 100%
	max-width 560px
	margin 0 auto 50px
	padding-left: 50px
	position relative
	&:before
		content: ''
		display block
		position absolute
		width 30px
		height: 30px
		border-radius: 50px
		background-color: #1F5BFF
		top 10px
		left 0
	&:after
		content: ''
		display block
		position absolute
		width: 9px;
		height: 15px;
		border-bottom: 1px solid #fff
		border-right: 1px solid #fff
		transform: rotate(32deg)
		top: 16px;
		left: 10px;
	&-text
		font-family: PH
		font-size: 22px
		text-transform uppercase